{
  "name": "全能二维码",
  "version": "0.1.0",
  "manifest_version": 2,
  "description": "将当前标签的链接地址转换成二维码，并支持二维码编码和解码。",
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "background": {
    "scripts": ["js/background.js"]
  },
  "browser_action": {
    "default_icon": "images/icon19.png",
    "default_title": "全能二维码",
    "default_popup": "popup.html"
  },
  "homepage_url": "https://github.com/nuintun/x-qrcode",
  "permissions": ["tabs", "contextMenus", "<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/content.js"],
      "css": ["css/content.css"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": ["images/close.png"]
}
